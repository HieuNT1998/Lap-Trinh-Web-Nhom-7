  $(document).on('click', ".active .answer input", function() {
    var answer = $(this).attr('value');
    var correct_answer = $(".active ").attr("value");
    if(correct_answer == answer) $(this).css("background-color","green");
    else{
      $(this).css("background-color","red");
      $(".active .correct").css("background-color","green");
    }        
  });

</script>